@model IEnumerable<VisTuApp.Models.Vistoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vistorias</h1>

<p>
    <a asp-action="Create">Cadastrar Vistoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tubulacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataVistoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioVistoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataReparo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observação)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tubulacao.NomeTubulacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataVistoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioVistoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataReparo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observação)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
